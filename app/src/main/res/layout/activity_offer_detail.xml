<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:padding="16dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".OfferDetailFragment">

    <fragment android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:name="com.google.android.gms.maps.MapFragment"/>

    <FrameLayout android:id="@+id/offer_detail_container" android:layout_weight="3"
        android:layout_width="match_parent" android:layout_height="0dp"
        tools:context=".OfferDetailActivity" tools:ignore="MergeRootFrame" />

</LinearLayout>
